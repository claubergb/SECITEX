<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Evento</th>
      <th>Situação</th>
      <th colspan="3">Opções</th>
    </tr>
  </thead>
  <tbody>
    <% @participante.trabalhos.each do |trabalho| %>
      <tr>
        <td><%= trabalho.titulo %></td>
        <td><%= trabalho.linha.evento.nome %></td>
        <td><%= trabalho.status_situacao(trabalho.situacao).html_safe %></td>
        <td>
          <div class="btn-group">
            <% if can? :show, trabalho %>
              <%= link_to fa_icon('download'), trabalho.download, class: 'btn btn-primary btn-sm' %>
              <%= link_to fa_icon('eye'), trabalho, class: 'btn btn-primary btn-sm' %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
