<% if inscricoes.empty? %>
  <p>Nenhuma inscrição realizada para minicurso até o momento.</p>
<% else %>
  <table class="table table-bordered table-hover">
    <thead>
      <th>Minicurso</th>
      <th>Situação</th>
      <th>Opções</th>
    </thead>
    <tbody>
      <% inscricoes.each do |inscricao| %>
        <tr>
          <td><%= link_to inscricao.minicurso.titulo, admin_minicurso_path(inscricao.minicurso) %></td>
          <td>
            <%= inscricao.status_situacao.html_safe %>
            <% if inscricao.situacao == Inscricao::SITUACOES[:suplente] %>
              (Colocação na lista de suplência: <%= inscricao.colocacao_suplencia %>)
            <% end %>
          </td>
          <td>
            <div class="btn-group">
              <%= link_to fa_icon('trash'), admin_inscricao_path(inscricao), method: :delete, class: "btn btn-primary btn-sm", data: { confirm: 'Tem certeza que deseja excluir essa inscrição?' } %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
